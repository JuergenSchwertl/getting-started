{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "MXCHIP: Local OpenOCD",
            "type": "cortex-debug",
            "request": "launch",
            "servertype": "openocd",
            "device": "STM32F412RG",
            "runToEntry": true,
            "executable": "${workspaceFolder}/build/app/mxchip_azure_iot.elf",
            "svdFile": "${workspaceFolder}/STM32F412.svd",
            "cwd": "${workspaceRoot}",
            "configFiles": [
                "board/stm32f4discovery.cfg"
            ]
        },
        {
            "name": "Launch",
            "type": "cppdbg",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "program": "${workspaceFolder}/build/app/mxchip_azure_iot.elf",
            "MIMode": "gdb",
            "miDebuggerPath": "arm-none-eabi-gdb",
            "miDebuggerServerAddress": "localhost:3333",
            "debugServerPath": "openocd",
            "debugServerArgs": "-f board/stm32f4discovery.cfg",
            "serverStarted": "Listening on port .* for gdb connections",
            "filterStderr": true,
            "stopAtConnect": true,
            "hardwareBreakpoints": {
                "require": true,
                "limit": 6
            },
            "preLaunchTask": "Flash",
            "svdPath": "${workspaceFolder}/STM32F412.svd"
        }
    ]
}